# RAG Chatbot Environment Variables Example

# Application settings
APP_NAME=RAG Chatbot
DEBUG=False
LOG_LEVEL=INFO
MAX_CHUNK_SIZE=1200
MIN_CHUNK_SIZE=800
RETRIEVAL_TOP_K=5
RETRIEVAL_THRESHOLD=0.7

# Qdrant settings - Use your existing Qdrant instance
QDRANT_HOST=your-qdrant-host-url
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=book_embeddings
QDRANT_VECTOR_SIZE=1024
QDRANT_DISTANCE=Cosine

# Neon Postgres settings - Use your existing Neon database
NEON_DATABASE_URL=postgresql://user:password@your-neon-db-url/dbname
NEON_POOL_SIZE=10
NEON_POOL_TIMEOUT=30

# Gemini settings
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-embedding-001
GEMINI_TASK_TYPE=RETRIEVAL_DOCUMENT
GEMINI_OUTPUT_DIMENSIONALITY=1024

# LLM settings (OpenRouter)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=openai/gpt-4-turbo
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# CORS settings
CORS_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000